<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <FrameLayout
        android:layout_height="wrap_content"
        android:id="@+id/date_from"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_from_text_view"
            style="@style/AppTheme.Text.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordered_edit_text_normal"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingTop="22dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:text="@string/from_current_time"/>

        <TextView
            android:id="@+id/date_from_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@color/windowBackground"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="С времени"
            android:textColor="@color/textPrimary"
            android:textSize="12dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_height="wrap_content"
        android:id="@+id/date_to"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_to_text_view"
            style="@style/AppTheme.Text.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordered_edit_text_normal"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingTop="22dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:text="@string/from_current_time"/>

        <TextView
            android:id="@+id/date_to_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@color/windowBackground"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="С времени"
            android:textColor="@color/textPrimary"
            android:textSize="12dp"/>

    </FrameLayout>
</LinearLayout>
