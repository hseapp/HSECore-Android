<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="12dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            style="@style/AppTheme.Text.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/range"
            style="@style/AppTheme.Text.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp" />
    </FrameLayout>

    <com.innovattic.rangeseekbar.RangeSeekBar
        android:id="@+id/range_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:rsb_maxThumbDrawable="@drawable/circle_blue"
        app:rsb_maxThumbOffsetHorizontal="2dp"
        app:rsb_minThumbDrawable="@drawable/circle_blue"
        app:rsb_minThumbOffsetHorizontal="-2dp"
        app:rsb_trackColor="@color/buttonTransparent"
        app:rsb_trackRoundedCaps="true"
        app:rsb_trackSelectedColor="@color/blue"
        app:rsb_trackSelectedThickness="2dp"
        app:rsb_trackThickness="2dp" />

</LinearLayout>