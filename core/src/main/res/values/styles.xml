<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="checkboxStyle">@style/App.ThemeOverlay.CheckBox</item>
        <item name="editTextStyle">@style/App.ThemeOverlay.EditText</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/statusBar</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/navigationBar</item>
        <item name="android:progressBarStyleHorizontal">@style/App.ThemeOverlay.ProgressBar.Horizontal</item>

        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- And then this will be needed -->
        <item name="android:navigationBarColor">@color/windowBackground</item>
        <item name="android:colorBackground">@color/windowBackground</item>
    </style>

    <style name="StyleBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- And then this will be needed -->
        <item name="android:navigationBarColor">@color/windowBackground</item>
        <item name="android:colorBackground">@color/windowBackground</item>
    </style>

    <style name="App.ThemeOverlay.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
    </style>

    <style name="App.ThemeOverlay.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="App.ThemeOverlay.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:capitalize">sentences</item>
        <item name="android:background">@drawable/rounded_gray_rect</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:clipToPadding">false</item>
    </style>


    <style name="App.ThemeOverlay.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/windowBackground</item>
        <item name="android:fontFamily">@font/futuramedium</item>
        <item name="fontFamily">@font/futuramedium</item>
        <item name="actionOverflowButtonStyle">@style/App.ThemeOverlay.ActionButton.Overflow</item>
    </style>
    
    <style name="App.ThemeOverlay.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_24</item>
    </style>

    <style name="App.ThemeOverlay.Toolbar.Title" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="AppTheme.Text.TabTitle" parent="AppTheme.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/futuramedium</item>
        <item name="android:textColor">@color/grayLight</item>
        <item name="tabTextColor">@color/grayLight</item>
        <item name="tabSelectedTextColor">@color/blue</item>
    </style>

    <style name="AppTheme.Text.Title" parent="AppTheme.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/futuramedium</item>
    </style>

    <style name="AppTheme.Text.Title2" parent="AppTheme.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.Title3" parent="AppTheme.Text.Title2">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="AppTheme.Text.Title4" parent="AppTheme.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.Primary" parent="AppTheme.Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.BodyLink" parent="AppTheme.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.Secondary" parent="AppTheme.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="AppTheme.Text.Subtitle" parent="AppTheme.Text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="AppTheme.Text.Link" parent="AppTheme.Text.Primary">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AppTheme.Text.Link.Bold" parent="AppTheme.Text.Link">
        <item name="android:fontFamily">@font/futuramedium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Chip" parent="AppTheme.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:height">28dp</item>
        <item name="android:background">@drawable/text_chip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>